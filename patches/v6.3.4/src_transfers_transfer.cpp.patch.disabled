From e3759ed1bee838b9bbacd793d1fa34f7d353cd41 Mon Sep 17 00:00:00 2001
From: AtomJon <jonbruskin@gmail.com>
Date: Sat, 27 Sep 2025 16:57:48 +0200
Subject: [PATCH] Sometimes gui gets stuck in preview screen when printing
 remotely. Skip it to avoid bugs

---
 src/transfers/transfer.cpp | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/src/transfers/transfer.cpp b/src/transfers/transfer.cpp
index f61ad045e..5963ebcb9 100644
--- a/src/transfers/transfer.cpp
+++ b/src/transfers/transfer.cpp
@@ -425,7 +425,7 @@ void Transfer::notify_created() {
         // print preview / one click print, doesn't really start the print.
         char sfn_path[FILE_PATH_BUFFER_LEN];
         get_SFN_path_copy(slot.destination(), sfn_path, sizeof(sfn_path));
-        print_begin(sfn_path);
+        print_begin(sfn_path, marlin_server::PreviewSkipIfAble::all);
     }
 
     already_notified = true;
