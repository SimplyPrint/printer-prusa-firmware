+#include "screen_sp_print_result.hpp"
+#include "marlin_client.hpp"
+#include "ScreenHandler.hpp"
+#include "MsgBoxWarning.hpp"
+#include <connect/marlin_printer.hpp>
+
+SPPrintResultScreen::SPPrintResultScreen(window_t *parent, Rect16 rect)
+        : window_frame_t(parent, rect),
+          image_left(this, Rect16{0, 0, rect.width / 2, rect.height}, "image_path_here"),
+          button1(this, Rect16{rect.width / 2 + 10, 20, 100, 40}, N_("Button 1"), &SPrintResultScreen::button1Callback),
+          button2(this, Rect16{rect.width / 2 + 10, 80, 100, 40}, N_("Button 2"), &SPrintResultScreen::button2Callback) {
+
+    setupComponents();
+}
+
+void SPPrintResultScreen::setupComponents() {
+    image_left.Show();
+    button1.Show();
+    button2.Show();
+}
+
+void SPPrintResultScreen::Show() {
+    window_frame_t::Show();
+    image_left.Show();
+    button1.Show();
+    button2.Show();
+}
+
+void SPPrintResultScreen::Hide() {
+    window_frame_t::Hide();
+    image_left.Hide();
+    button1.Hide();
+    button2.Hide();
+}
+
+void SPPrintResultScreen::button1Callback() {
+    if (marlin_client::is_printing()) {
+        // Action to pause the current printing process
+        marlin_client::print_pause();
+        MsgBoxWarning(_("Printing paused successfully."), Responses_Ok);
+    } else {
+        MsgBoxWarning(_("No active print to pause."), Responses_Ok);
+    }
+}
+
+void SPPrintResultScreen::button2Callback() {
+    if (marlin_client::get_print_state() == printing_state_t::PRINTED) {
+        // Action to clear the bed when the print is completed
+        connect_client::MarlinPrinter printer;
+        SharedBuffer buffer;
+        connect_client::Connect client(printer, buffer);
+        int response_code = client.send_simplyprint("bed cleared");
+        if (response_code / 100 == 2) {
+            MsgBoxWarning(_("Bed cleared message sent successfully."), Responses_Ok);
+        } else {
+            MsgBoxWarning(_("Failed to send bed cleared message."), Responses_Ok);
+        }
+    } else {
+        MsgBoxWarning(_("Print not completed. Bed clear action not applicable."), Responses_Ok);
+    }
+}
