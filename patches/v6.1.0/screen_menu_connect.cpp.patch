+void MI_SEND_SIMPLYPRINT::click([[maybe_unused]] IWindowMenu &window_menu) {
+    SharedBuffer buffer;
+    connect_client::MarlinPrinter printer;
+    // Use the existing connect_instance to send "Hello World"
+    connect_client::Connect client(printer, buffer);
